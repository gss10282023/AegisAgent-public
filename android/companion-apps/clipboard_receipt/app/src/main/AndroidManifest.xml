<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="false"
        android:label="MAS Clipboard Receipt"
        android:supportsRtl="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="MAS Clipboard Receipt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".SetClipboardReceiver"
            android:exported="true"
            android:label="MAS Set Clipboard Receiver">
            <intent-filter>
                <action android:name="com.mas.clipboardreceipt.SET_CLIP" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ReceiptImeService"
            android:exported="true"
            android:label="MAS Clipboard Receipt IME"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

    </application>

</manifest>

